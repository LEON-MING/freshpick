<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeSearchAndFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/home_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/encSearch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/freshpick_grey"
            android:iconifiedByDefault="false"
            android:queryHint="Search Encyclopedia"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/encFilter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/encFilter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="Filters"
            android:textColor="@color/freshpick_green"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/encSearch"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/home_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeSearchAndFilter">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="70dp">


            <TextView
                android:id="@+id/firstBox"
                android:layout_width="377dp"
                android:layout_height="183dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="#EAF5D2"
                app:layout_constraintBottom_toTopOf="@id/featuredRecipe"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/seasonalFavText"
                android:layout_width="164dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="In Season Now"
                android:textColor="#605f5f"
                android:textSize="10pt"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/firstBox"
                app:layout_constraintHorizontal_bias="0.015"
                app:layout_constraintStart_toStartOf="@+id/firstBox"
                app:layout_constraintTop_toTopOf="@+id/firstBox" />

            <ImageView
                android:id="@+id/firstImage"
                android:layout_width="111dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/firstBox"
                app:layout_constraintHorizontal_bias="0.073"
                app:layout_constraintStart_toStartOf="@+id/firstBox"
                app:layout_constraintTop_toBottomOf="@+id/seasonalFavText"
                app:srcCompat="@drawable/cherry_season" />

            <ImageView
                android:id="@+id/firstImage2"
                android:layout_width="99dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/firstBox"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/firstImage"
                app:layout_constraintTop_toBottomOf="@+id/seasonalFavText"
                app:srcCompat="@drawable/avocado_season" />

            <ImageView
                android:id="@+id/firstImage3"
                android:layout_width="99dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/firstBox"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/firstImage2"
                app:layout_constraintTop_toBottomOf="@+id/seasonalFavText"
                app:srcCompat="@drawable/apple_season2" />

            <TextView
                android:id="@+id/learnMoreText"
                android:layout_width="83dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="8dp"
                android:text="See More..."
                android:textAlignment="textEnd"
                android:textColor="#2F80ED"
                android:textSize="7pt"
                app:layout_constraintEnd_toEndOf="@+id/firstBox"
                app:layout_constraintHorizontal_bias="0.775"
                app:layout_constraintStart_toEndOf="@+id/seasonalFavText"
                app:layout_constraintTop_toTopOf="@+id/firstBox" />

            <TextView
                android:id="@+id/featuredRecipe"
                android:layout_width="377dp"
                android:layout_height="183dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="#EAF5D2"
                android:text=""
                android:textColor="#605f5f"
                android:textSize="10pt"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstBox" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:text="Featured Recipes"
            android:textColor="#605f5f"
            android:textSize="10pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/featuredRecipe"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="@+id/featuredRecipe"
            app:layout_constraintTop_toTopOf="@+id/featuredRecipe" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="360dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:textSize="7pt"
                android:text="Today, we’re featuring JuicyKoala123’s recipe, the Apple and Greens smoothie!"
                app:layout_constraintEnd_toEndOf="@+id/featuredRecipe"
                app:layout_constraintHorizontal_bias="0.166"
                app:layout_constraintStart_toStartOf="@+id/featuredRecipe"
                app:layout_constraintTop_toBottomOf="@+id/textView8"

                />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="356dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="5dp"
                android:textSize="7pt"
                android:text="Take 2 apples, 1/2 a head of cabbage, and 20 ounces of broccoli..."
                app:layout_constraintEnd_toEndOf="@+id/featuredRecipe"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/featuredRecipe"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="128dp"
                android:text="Read more"
                android:textColor="#2F80ED"
                android:textSize="7pt"
                app:layout_constraintEnd_toEndOf="@+id/featuredRecipe"
                app:layout_constraintHorizontal_bias="0.54"
                app:layout_constraintStart_toStartOf="@+id/featuredRecipe"
                app:layout_constraintTop_toTopOf="@+id/featuredRecipe" />

            <ImageView
            android:id="@+id/imageView5"
            android:layout_width="46dp"
            android:layout_height="43dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/featuredRecipe"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/featuredRecipe"
            app:srcCompat="@drawable/apple" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="46dp"
            android:layout_height="43dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/featuredRecipe"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/featuredRecipe"
            app:srcCompat="@drawable/broccoli" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="43dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/featuredRecipe"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/featuredRecipe"
            app:srcCompat="@drawable/cabbage" />

            <TextView
                android:id="@+id/recipeOne"
                android:layout_width="376dp"
                android:layout_height="143dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="#fff"
                android:text=""
                android:textColor="#605f5f"
                android:textSize="10pt"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/featuredRecipe"

                />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="Fruit Salad Grocery List"
                android:textColor="#605f5f"
                android:textSize="10pt"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/recipeOne"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="@+id/recipeOne"
                app:layout_constraintTop_toTopOf="@+id/recipeOne" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="4dp"
                android:text="Anon. Rabbit"
                app:layout_constraintEnd_toEndOf="@+id/recipeOne"
                app:layout_constraintHorizontal_bias="0.945"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/recipeOne" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Read more"
                android:textColor="#2F80ED"
                android:textSize="7pt"
                app:layout_constraintEnd_toEndOf="@+id/featuredRecipe"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="286dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:text="Watermelon"
                app:layout_constraintEnd_toEndOf="@+id/recipeOne"
                app:layout_constraintStart_toStartOf="@+id/recipeOne"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="286dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:text="Strawberries"
                app:layout_constraintEnd_toEndOf="@+id/recipeOne"
                app:layout_constraintStart_toStartOf="@+id/recipeOne"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <CheckBox
                android:id="@+id/list_view_item_checkbox"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:width="0dp"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <CheckBox
                android:id="@+id/list_view_item_checkbox2"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:width="0dp"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_view_item_checkbox"
                app:layout_constraintVertical_chainStyle="packed" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_items"
        android:background="@color/white">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>

